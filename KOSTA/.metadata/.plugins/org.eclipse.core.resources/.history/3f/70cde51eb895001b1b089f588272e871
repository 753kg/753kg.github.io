<script>
	a = 10;
	b = "10";
	c = "10";
	document.write(a == b + "<br>");		// 값이 같은지?
	document.write(a === b + "<br>");	// type도 같고 값도 같은지?
	document.write(c === b + "<br>");
	
	document.write(true + 20 + "<br>");		// true는 1로 자동 형변환
	document.write(false + 20 + "<br>");	//false는 0으로 
</script>


<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>

<script>

  window.onload = function(){
	  btn1.onclick = f1;
	  btn2.onclick = f2;
	  btn3.onclick = f3;
  }
  
  
	function f1(){
		var num = Number(prompt("숫자를 입력하세요", ""));
		if(num > 0) s = `${num}은 양수입니다.`;
		else if(num == 0) s = `${num}입니다.`;
		else s = `${num}은 음수입니다.`;
		here.innerHTML = s;
	}
	
	function f2(){
		var num = Number(prompt("숫자를 입력하세요", ""));
		s = (num % 2 == 0) ? "짝수" : "홀수";
		here.innerHTML = `${num}는 ${s}입니다.`;
	}
	
	function f3(){
		var scores = prompt("점수를 입력하세요(100 100 100)", "");
		var arr = scores.split(" ");
		var total = 0;
		for(var idx in arr){
			total += Number(arr[idx]);
		}
		var avg = total / arr.length;
		here.innerHTML = avg;
		
		var grade = "가";
		if(avg >= 90) grade = "수";
		else if(avg >= 80) grade = "우";
		else if(avg >= 70) grade = "미";
		else if(avg >= 60) grade = "양";
		
		here.innerHTML = `평균: ${avg} ==> 성적: ${grade}`;
	}
</script>

</head>
<body>
	<h1>if else if 조건문 실습</h1>
	<button id="btn1">양수, 0, 음수 구분</button>
	<button id="btn2">홀수, 짝수 구분</button>
	<button id="btn3">평균과 수우미양가 구분</button>
	<hr>
	<div id="here">여기에 출력</div>
</body>
</html>
package view;

import java.util.List;

import model.BookVO;
import model.BorrowVO;

public class LibraryView {

	public static void printBooks(List<BookVO> booklist) {
		int count = 0;
		for(BookVO book : booklist) {
			System.out.println("책표지:" + book.getCover());
			System.out.println(String.format("도서명:%-20s 작가명:%-10s", book.getB_name(), book.getAuthor()));
			System.out.println(String.format("도서코드:%-3d 출판사:%-10s 출간일:%tF ", book.getB_code(), book.getPub(), book.getPub_date()));
			System.out.println(String.format("대출상태:%-4s 반납예정일:%tF 예약상태:", book.getB_status(), book.getReturn_date(), book.getRsv_status()));
			
			System.out.println(book);
			count ++;
		}
		if(count != 0) System.out.println("총 " + count + "건");
		else print("검색 결과가 없습니다.");
	}
	
	public static void printBorrows(List<BorrowVO> borrlist) {
		int count = 0;
		for(BorrowVO borr : borrlist) {
			System.out.println(borr);
			count ++;
		}
		if(count != 0) System.out.println("총 " + count + "건");
		else print("대출 이력이 없습니다.");
	}
	
	
	public static void print(String message) {
		System.out.println("[알림]" + message);
	}
}

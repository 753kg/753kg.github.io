<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>

<script>

	// 2. 익명 함수(이름이 없다)
	window.onload = function() {
		// 3. callback 함수
		btn1.onclick = f1; 			// ()를 붙이면 로드 끝나고 바로 호출하게됨. 버튼 안눌러도
		btn2.onclick = f2;
	}
	
	// 1. 선언적 함수(이름이 있는 함수)
	function f1(){
		here.innerHTML = `
			<ul>
				<li>number</li>
				<li>string</li>
				<li>boolean</li>
				<li>object</li>
				<li>function</li>
				<li>undefined</li>
			</ul>
			`;
	}
	// 1. 선언적 함수
	function f2(){
		// 복합대입연산자: 기존의 문자열에 문자열을 붙임
		here.innerHTML += "<ol><li>선언적함수</li><li>익명함수</li></ol>";
	}
</script>

<body>
	<button id="btn1">변수종류</button>
	<button id="btn2">함수종류</button>
	<hr>
	<div id="here"></div>
</body>
</html>
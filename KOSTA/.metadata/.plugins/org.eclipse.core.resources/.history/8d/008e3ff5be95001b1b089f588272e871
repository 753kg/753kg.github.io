<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>

<script>

	// a = document.getElementById("op").value;	// 에러
	// alert(a);
	
	// window = <body> // body가 다 로드 되고 난 뒤에 수행
	window.onload = function(){ 
		 a = document.getElementById("op").value;	// 에러
		 alert(a);
	};

	function execute(){
		var op = document.getElementById("op").value;
		var val1 = Number(document.getElementById("val1").value);
		var val2 = Number(document.getElementById("val2").value);
		var result = 0;
		if(op === "+") result = val1 + val2;
		else if(op === "-") result = val1 - val2;
		else if(op === "*") result = val1 * val2;
		else if(op === "/") result = val1 / val2;
		else if(op === "%") result = val1 % val2;
		document.getElementById("result").value = result;
	}
</script>

</head>
<body>

	<h1>사칙연산 수행하기</h1>
	<hr>
	
	<input type="number" id="val1" value="10">
	<select id="op">
		<option>+</option>	<!-- 자동으로 +가 value가 된다. -->
		<option>-</option>
		<option>*</option>
		<option>/</option>
		<option value="%">나머지</option>
	</select>
	<input type="number" id="val2" value="20">
	<input type="button" value="연산하기" onclick="execute();">
	<input type="number" id="result" readonly="readonly">
	
	<script>
	 	a = document.getElementById("op").value;	// 에러안남
	 	alert(a);
	</script>
	
</body>
</html>
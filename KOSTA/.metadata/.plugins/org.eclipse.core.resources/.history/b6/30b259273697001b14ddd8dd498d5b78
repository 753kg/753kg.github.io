<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Function Review</title>
<script>
	// 1. global 변수
	var a = 10;
	b = 20;
	//alert(a + b);
	
	for(i=1; i<=5; i++){
		console.log("i= " + i);
	}
	for(var j=1; j<=5; j++){
		console.log("j= " + j);
	}
	//alert(i + j);
	// 함수 밖에서 선언한 변수(var)는 무조건 global
	// 선언 안하고 사용한 변수는 함수 밖이든 안이든 무조건 global
	
	function call(){
		for(i2=1; i2<=5; i2++){
			console.log("i2= " + i2);
		}
		// 함수 내에서 선언한 변수(var)는 local
		for(var j2=1; j2<=5; j2++){
			console.log("j2= " + j2);
		}
	}
	call();
	alert(i2);	// 6
	alert(j2);	// 에러
</script>
</head>
<body>
	<h1>Function Review</h1>
</body>
</html>